<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:id="@+id/viewHolderLayout"
                                                   android:layout_height="wrap_content">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/iv_user" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.109"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/iv_star"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_user" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="124dp"/>
    <TextView
            android:textColor="#000000"
            android:text="000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_starCount"
            app:layout_constraintStart_toEndOf="@+id/iv_star" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_user"/>
    <TextView
            android:text="Title"
            android:textSize="25sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/tv_title"
            app:layout_constraintStart_toEndOf="@+id/iv_user" android:layout_marginStart="20dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_language"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/iv_user"
            android:layout_marginTop="26dp" app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_view"
            android:id="@+id/iv_view" android:layout_marginStart="48dp"
            app:layout_constraintStart_toEndOf="@+id/tv_starCount"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/iv_user"/>
    <TextView
            android:text="000"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_view"
            app:layout_constraintStart_toEndOf="@+id/iv_view" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>